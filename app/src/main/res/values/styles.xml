<resources>

    <!-- Base application theme. -->
<!--    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">-->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize theme here. -->
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>

        <!--colours-->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:buttonTint">@color/colorAccent</item>
    </style>

    <!-- Dark App Theme-->
    <style name="style_dark" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/darkColorPrimary</item>
        <item name="android:textColor">@color/darkTextColorPrimary</item>
        <item name="android:textColorPrimary">@color/darkTextColorPrimary</item>
        <item name="android:background">@color/darkWindowBackground</item>
        <item name="colorAccent">@color/darkColorAccent</item>
        <item name="android:buttonTint">@color/darkColorAccent</item>
    </style>

    <style name="bottomToolbarButton">
        <item name="android:layout_width">128dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">#ffffff</item>
        <item name="android:drawableTint">#000000</item>
        <item name="android:elevation">@dimen/elevation_bottomBarButtons</item>
        <item name="android:outlineProvider">background</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="filterChip">
        <item name="chipBackgroundColor">@color/bg_chip_state_list</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="android:textColor">@color/text_chip_state_list</item>
        <item name="chipStrokeColor">#000000</item>
    </style>

</resources>
