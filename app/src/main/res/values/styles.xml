<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize theme here. -->
        <item name="windowNoTitle">false</item>
        <item name="windowActionBar">true</item>

        <!--colours-->
        <item name="android:textColorPrimary">@color/white</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>

        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:buttonTint">@color/colorAccent</item>
    </style>

    <!-- Dark App Theme-->
    <style name="style_dark" parent="Theme.AppCompat.Light">
        <item name="windowNoTitle">false</item>
        <item name="windowActionBar">true</item>

        <item name="android:textColorPrimary">@color/white</item>
        <item name="colorPrimary">@color/darkColorPrimary</item>
        <item name="colorPrimaryDark">@color/darkColorPrimary</item>

        <item name="android:textColor">@color/darkTextColor</item>
        <item name="android:windowBackground">@color/darkWindowBackground</item>
        <item name="colorAccent">@color/darkColorAccent</item>
        <item name="backgroundTint">@color/darkButtonBackground</item>
        <item name="android:buttonTint">@color/colorAccent</item>
    </style>

    <style name="bottomToolbarButton">
        <item name="android:layout_width">128dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">#ffffff</item>
        <item name="android:drawableTint">#000000</item>
        <item name="android:elevation">@dimen/elevation_bottomBarButtons</item>
        <item name="android:outlineProvider">background</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

</resources>
