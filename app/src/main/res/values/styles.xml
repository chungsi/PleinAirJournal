<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light">
        <!-- Customize theme here. -->
        <item name="windowNoTitle">false</item>
        <item name="windowActionBar">true</item>
        <item name="android:windowBackground">@color/white</item>

        <!--colours-->
        <item name="android:textColorPrimary">@color/white</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>

        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:buttonTint">@color/colorAccent</item>

        <!--Action bar style-->
        <item name="android:actionBarSize">@dimen/actionBarHeight</item>
        <item name="actionBarSize">@dimen/actionBarHeight</item>
        <item name="titleTextStyle">@style/MyTheme.ActionBar.TitleTextStyle</item>
        <item name="android:titleTextStyle">@style/MyTheme.ActionBar.TitleTextStyle</item>
        <item name="android:contentInsetStartWithNavigation">0dp</item>
        <item name="android:contentInsetStart">0dp</item>
        <item name="android:fitsSystemWindows">false</item>
    </style>

    <!-- Dark App Theme-->
    <style name="style_dark" parent="Theme.MaterialComponents.DayNight">
        <item name="windowNoTitle">false</item>
        <item name="windowActionBar">true</item>

        <item name="android:textColorPrimary">@color/white</item>
        <item name="colorPrimary">@color/darkColorPrimary</item>
        <item name="colorPrimaryDark">@color/darkColorPrimary</item>

        <item name="android:textColor">@color/darkTextColor</item>
        <item name="android:windowBackground">@color/darkWindowBackground</item>
        <item name="colorAccent">@color/darkColorAccent</item>
<!--        <item name="backgroundTint">@color/darkButtonBackground</item>-->
        <item name="android:buttonTint">@color/darkButtonBackground</item>

        <!--Action bar style-->
        <item name="android:actionBarSize">@dimen/actionBarHeight</item>
        <item name="actionBarSize">@dimen/actionBarHeight</item>
        <item name="titleTextStyle">@style/MyTheme.ActionBar.TitleTextStyle</item>
        <item name="android:titleTextStyle">@style/MyTheme.ActionBar.TitleTextStyle</item>
    </style>

    <style name="bottomToolbarButton">
        <item name="android:layout_width">128dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">#ffffff</item>
        <item name="android:drawableTint">#000000</item>
        <item name="android:elevation">@dimen/elevation_bottomBarButtons</item>
        <item name="android:outlineProvider">background</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="filterChip">
        <item name="chipBackgroundColor">@color/bg_chip_state_list</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="android:textColor">@color/text_chip_state_list</item>
        <item name="chipStrokeColor">#000000</item>
    </style>

    <style name="MyTheme.ActionBar.TitleTextStyle" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">@dimen/bodyTextSize</item>
    </style>

</resources>
